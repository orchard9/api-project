# Mailgun API Configuration
MAILGUN_API_KEY=your_api_key_here
MAILGUN_DOMAIN=your-domain.com
MAILGUN_REGION=US
# Options: US (https://api.mailgun.net) or EU (https://api.eu.mailgun.net)

# Optional: Specific sending keys for domains
# MAILGUN_SENDING_KEY=your_sending_key_here

# Export Configuration
EXPORT_FORMAT=json
# Options: json, csv, both

# Date Range for Historical Data (optional)
# DATE_FROM=2024-01-01
# DATE_TO=2024-12-31

# Output Directory (optional, defaults to ./exports)
# OUTPUT_DIR=./exports

# Rate Limiting (optional, defaults to 300 requests per minute)
# RATE_LIMIT=300

# Debug Mode (optional, defaults to false)
# DEBUG=false